<p>Products Page</p>

<% for product in @products %>
  <% if product.stock_quantity == 0 %>
    <div class="red">
      <p><%=  product.name() %></p>
      <p>Stock Qty: <%=  product.stock_quantity() %></p>
    </div>
  <% elsif product.stock_quantity <= 2 %>
    <div class="yellow">
      <p><%=  product.name() %></p>
      <p>Stock Qty: <%=  product.stock_quantity() %></p>
    </div>
  <% else %>
    <div>
      <p><%=  product.name() %></p>
      <p>Stock Qty: <%=  product.stock_quantity() %></p>
    </div>
  <% end %>
  <a href="/product/<%= product.id %>">More Info</a>
  <p>--------------------------------------</p>
<% end %>
